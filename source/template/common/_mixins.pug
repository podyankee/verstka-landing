//- nav menu mixin
mixin nav (className, items, activeItem)
    #{className}(class=`${className} ${className}__main` id=`main-${className}`)
            ul(class=`${className}__list list`)
                each href, title in items
                    if (title == activeItem) 
                        li.nav__list-item.list__item
                            span(href= href).nav__list-link.active
                                span= title
                    else
                        li.nav__list-item.list__item
                            a(href= href).nav__list-link
                                span(class=`${className}__list-noactive`)= title

//- icon SVG mixin
mixin icon(name, mod)
    - mod = mod || ''
    svg(class="icon icon-" + name + ' ' + mod)
        use(xlink:href="/assets/img/sprite.svg#" + name)

mixin paymentType(icon)
    li.payment-type__item
        +icon(icon)
mixin footerNavLink(title)
    li.footer-nav__item
        a(href="#").footer-nav__link= title

mixin productLineInfo(key,val)
    .product-line-info
        span.product-prev__key= key
        span.product-prev__val= val

mixin shareLine(icon,link, title)
    .share-line
        +icon(icon)
        a(href= link)= title

mixin tabsLink(dataShow, text)
    li.tabs-list__item(show-tab= dataShow)&attributes(attributes)
        span.tabs-list__text= text

mixin charLine(key, val)
    tr
        td.product-characteristic__key
            span= key
        td.product-characteristic__key
            span= val
mixin filterPriceLink(price)
    li.filter--price__item
        a(href="#").filter--price__link= price

mixin colorCheck(bg)
    li.filter-color__item
        label.filter-color__check
            input(type="checkbox")
            .filter-color(style=bg)
                .filter-color__icon
                    +icon('check')

mixin brandsItem(title)
    li.filter-brands__item
        label.checkbox
            | #{title}
            input(type="checkbox")
            span.checkbox-custom
                +icon('check')




